@model IEnumerable<induwbd.Models.SoporteTecnico>

@{
    ViewBag.Title = "Soporte Técnico";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        h2 {
            color: #dc3545;
            text-align: center;
            margin-bottom: 30px;
        }

        .table-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .table th {
            background-color: #dc3545;
            color: #fff;
        }

        .btn-primary {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-primary:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .btn-details {
            background-color: #dc3545;
            color: #fff;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease;
            margin-right: 5px;
        }

            .btn-details:hover {
                background-color: #c82333;
            }

        .btn-container {
            display: flex;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>@ViewBag.Title</h2>

        <p class="text-center">
            <a href="@Url.Action("Create")" class="btn btn-primary">Crear nuevo ticket</a>
        </p>

        <div class="table-container">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Descripción del Problema</th>
                        <th>Estado</th>
                        <th>Fecha de Creación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IssueDescription</td>
                            <td>@item.Status</td>
                            <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="btn-container">
                                    <a href="@Url.Action("Details", new { id = item.TicketId })" class="btn-details">Detalles</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
