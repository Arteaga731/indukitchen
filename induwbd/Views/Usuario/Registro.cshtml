@model induwbd.Models.Usuario

@{
    ViewBag.Title = "Registro";
}

<style>
    /* Estilos para el formulario */
    body {
        font-family: Arial, sans-serif; /* Tipo de letra */
        margin: 0;
        padding: 0;
        background-color: #f2f2f2; /* Color de fondo */
    }

    form {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 300px;
        margin: 50px auto;
    }

    h2 {
        color: #333; /* Color del título */
        text-align: center;
        margin-bottom: 20px;
    }

    label {
        color: #666; /* Color de las etiquetas */
    }

    input[type="text"],
    input[type="password"] {
        width: calc(100% - 20px);
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
    }

    .btn-default {
        background-color: red; /* Color de fondo del botón */
        color: white;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 5px;
        font-size: 16px;
        transition: background-color 0.3s ease;
        width: 100%;
    }

        .btn-default:hover {
            background-color: black; /* Color de fondo del botón al pasar el cursor */
        }
</style>

<h2>Registro</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <form>
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <label for="Email">Email:</label>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>

        <div>
            <label for="Password">Password:</label>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>

        <div>
            <button type="submit" class="btn-default">Registro</button>
        </div>
    </form>
}

